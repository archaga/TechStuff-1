<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
    <div class="col-12 col-lg-6">
        <img src="/img/register.jpg" width="607" height="510" class="d-block mx-lg-auto img-fluid" loading="lazy" alt="Techie">
    </div>
     

  <div class="col-12 col-lg-6 "> 
    <div class="SIGNUP">Sign Up</div>
    <div class="content">
      <form action="/register" method="POST">
        <div class="user-details">
          <div class="input-box1">
            <label class="details"></span>
            <input type="text" id="firstname" name="firstname" placeholder="First Name" required>
          </div>
          <div class="input-box1">
            <label class="details"></span>
            <input type="text" id="middlename" name="middlename" placeholder="Middle Name" required>
          </div>
          <div class="input-box1">
            <label class="details"></span>
            <input type="text" id="lastname" name="lastname" placeholder="Last Name" required>
          </div>
          <div class="input-box2">
            <label class="details"></span>
            <input type="email" id="email" name="email" placeholder="Email" required>
          </div>
          <div class="input-box2">
            <label class="details"></span>
            <input type="text" id="phone" name="phone" placeholder="Phone Number" required>
          </div>
          <div class="input-box3">
            <label class="details"></span>
            <input type="text" id="street" name="street" placeholder="Street" required>
          </div>
          <div class="input-box3">
            <label class="details"></span>
            <input type="text" id="brgy" name="brgy" placeholder="Barangay" required>
          </div>
          <div class="input-box3">
            <label class="details"></span>
            <input type="text" id="mn" name="mn" placeholder="Municipality" required>
          </div>
          <div class="input-box3">
            <label class="details"></span>
            <input type="text" id="prov" name="prov" placeholder="Province" required>
          </div>
          <div class="input-box4">
            <label class="details"></span>
            <select id="gender" name="gender" class="details">
              <option selected>Select Gender</option>
              <option>Male</option>
              <option>Female</option>
            </select>
          </div>
          <div class="input-box4">
            <label class="details"></span>
            <input type="password" id="password" name="password" placeholder="Enter your password" required>
          </div>
        </div>   
        <div class="button">
          <button class="submit btn-primary btn-dark align-items-center px-4 me-md-2" type="submit" id="signup" name="signup">Sign Up</button>
        </div>
      </form>
    </div>
  </div>


 
